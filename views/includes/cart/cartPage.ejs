<!-- views/includes/cart/cartPage.ejs -->
<h1>Your Shopping Cart</h1>

<% if (cartItems.length > 0) { %>
    <table>
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% cartItems.forEach(item => { %>
                <tr>
                    <td><%= item.name %></td>
                    <td>$<%= (typeof item.price === 'number' ? item.price : parseFloat(item.price)).toFixed(2) %></td>
                    <td><%= item.quantity %></td>
                    <td>
                        <form action="/remove-from-cart/<%= item.id %>" method="POST">
                            <button type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } else { %>
    <p>Your cart is empty.</p>
<% } %>


