<form action="/books/add-book" method="POST" class="add-book-form">
    <div class="form-group">
        <label for="name">Book Name</label>
        <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            class="input-field"
            placeholder="Enter the book name" 
        >
    </div>
    
    <div class="form-group">
        <label for="year">Publication Year</label>
        <input 
            type="number" 
            id="year" 
            name="year" 
            required 
            class="input-field"
            placeholder="Enter the publication year" 
        >
    </div>

    <div class="form-group">
        <label for="author">Author</label>
        <input 
            type="text" 
            id="author" 
            name="author" 
            required 
            class="input-field"
            placeholder="Enter the author's name" 
        >
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <input 
            type="number" 
            id="price" 
            name="price" 
            required 
            class="input-field"
            placeholder="Enter the book price" 
        >
    </div>

    <div class="form-group">
        <label for="image_url">Image URL</label>
        <input 
            type="text" 
            id="image_url" 
            name="image_url" 
            class="input-field"
            placeholder="Enter the image URL" 
        >
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea 
            id="description" 
            name="description" 
            class="input-field" 
            rows="4" 
            placeholder="Enter a brief description of the book (max 500 characters)" 
            maxlength="500"  
        ></textarea>
    </div>


    <button 
        type="submit" 
        class="submit-button"
    >
        Add Book
    </button>
</form>

<button class="retour-button mt-4">
    <a href="/books" class="text-blue-600 hover:underline">Back to Books List</a>
</button>
